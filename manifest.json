{
  "manifest_version": 3,
  "name": "NEW HIDEJOBS EXTENSIOn",
  "description": "Injects a hidejobs-panel-ui world shadow element with auto/manual job support",
  "version": "1.1",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://app.hidejobs.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://app.hidejobs.com/*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "https://*.hidejobs.com/*",
        "https://hidejobs.com/*"
      ],
      "js": [
        "inject-shadow-ui.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.linkedin.com/jobs/*"
      ],
      "js": [
        "content-linkedin-scraper.js",
        "content-total-counter.js",
        "content-dismissed.js",
        "content-promoted.js",
        "content-applied.js",
        "content-viewed.js",
        "content-keywords.js",
        "content-hours-patch.js",
        "content-companies.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.indeed.com/*",
        "https://*.indeed.co.uk/*",
        "https://*.indeed.fr/*",
        "https://*.indeed.de/*",
        "https://*.indeed.ca/*",
        "https://*.indeed.com.au/*",
        "https://*.indeed.co.in/*",
        "https://*.indeed.ie/*",
        "https://*.indeed.nl/*",
        "https://*.indeed.ch/*",
        "https://*.indeed.be/*",
        "https://*.indeed.it/*",
        "https://*.indeed.es/*",
        "https://*.indeed.com.br/*",
        "https://*.indeed.mx/*",
        "https://*.indeed.jp/*"
      ],
      "js": [
        "content-total-counter-indeed.js",
        "content-applied-indeed.js",
        "content-sponsored-indeed.js",
        "content-companies-indeed.js",
        "content-keywords-indeed.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.glassdoor.com/*",
        "https://*.glassdoor.co.uk/*",
        "https://*.glassdoor.ca/*",
        "https://*.glassdoor.de/*",
        "https://*.glassdoor.fr/*",
        "https://*.glassdoor.es/*",
        "https://*.glassdoor.it/*",
        "https://*.glassdoor.nl/*",
        "https://*.glassdoor.ie/*",
        "https://*.glassdoor.com.au/*",
        "https://*.glassdoor.co.in/*"
      ],
      "js": [
        "content-total-counter-glassdoor.js",
        "content-keywords-glassdoor.js",
        "content-applied-glassdoor.js",
        "content-companies-glassdoor.js"
      ],
      "run_at": "document_idle"
    }
  ]
}